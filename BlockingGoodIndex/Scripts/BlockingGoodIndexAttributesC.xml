    Description:
        Attribute Script for Capture Run using an aligned index
-->

<OysterAttributes System = "IndexDemo">
	<Attribute Algo="none" Item="FirstName"/>
	<Attribute Algo="none" Item="LastName"/>
	<Attribute Algo="none" Item="BirthYear"/>
	
	<!-- -->
	<Indices>
		<Index Ident="X1">
			<Segment Item="FirstName" Hash="SOUNDEX"/>
			<Segment Item="LastName" Hash="SCAN(LR,LETTER,4,ToUpper,SameOrder)"/>
			<Segment Item="BirthYear" Hash="SCAN(LR,DIGIT,4,ToUpper,SameOrder)"/>
		</Index>
		<Index Ident="X2">
			<Segment Item="LastName" Hash="SOUNDEX"/>
			<Segment Item="BirthYear" Hash="SCAN(LR,DIGIT,4,ToUpper,SameOrder)"/>
		</Index>
	</Indices>
		
	<IdentityRules>
		<Rule Ident="1">
			<Term Item="FirstName" SIMILARITY="SOUNDEX"/>
			<Term Item="LastName" SIMILARITY="SCAN(RL,LETTER,3,ToUpper,SameOrder)"/>
			<Term Item="BirthYear" SIMILARITY="SCAN(LR,DIGIT,0,ToUpper,SameOrder)"/>
		</Rule>
		<Rule Ident="2">
			<Term Item="FirstName" SIMILARITY="NICKNAME"/>
			<Term Item="LastName" SIMILARITY="SOUNDEX"/>
			<Term Item="BirthYear" SIMILARITY="SCAN(LR,DIGIT,0,ToUpper,SameOrder)"/>
		</Rule>
	</IdentityRules>
</OysterAttributes>