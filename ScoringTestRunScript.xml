<?xml version="1.0" encoding="UTF-8"?>

<!--
    Document   : ScoringTestRunScript.xml
    Created on : 2018-07-16
    Author     : John Talburt
    Description: Test of Scoring Rule Functionality
-->

<OysterRunScript>
    <Settings RunScriptName="ScoringTestRunScript" Explanation="On" Debug="On" ChangeReportDetail="Yes"  Trace="On" SS="Off" />
    
    <LogFile Num="5" Size="100000000">./ScoringTest/Output/ScoringTestLog_%g.log</LogFile>  

    <RunMode>IdentityCapture</RunMode>

    <EREngine Type="FSCluster" />

    <!-- Attributes read from file only -->
    <AttributePath>./ScoringTest/Scripts/ScoringTestAttributes.xml</AttributePath>

    <!-- Identity-Capture does not start with any managed identities -->
    <IdentityInput Type="None"/>
    
    <!-- Identity-Capture produces a new identity file as output -->
    <IdentityOutput Type="TextFile">./ScoringTest/Output/ScoringTestOutput.idty</IdentityOutput>

    <!-- Identity-Capture creates the Link Index as output -->
    <LinkOutput Type="TextFile">./ScoringTest/Output/ScoringTestIndex.link</LinkOutput>
    
    <!-- Sources to Run -->
    <ReferenceSources>
        <Source>./ScoringTest/Scripts/ScoringTestDescriptor.xml</Source>
    </ReferenceSources>
</OysterRunScript>
