<OysterAttributes System="IdentityResolution">
    <Attribute Item="StudentFirstName" />
    <Attribute Item="StudentLastName"  />
    <Attribute Item="StudentDateOfBirth" />
    <Attribute Item="StudentSchoolCode" />
        <!-- Identity Rules -->
    <IdentityRules>
        <Rule Ident="1">
            <Term Item="StudentFirstName" DATAPREP="SCAN(LR,ALPHA,0,ToUpper,SameOrder)" SIMILARITY="Exact"/>
            <Term Item="StudentLastName" DATAPREP="SCAN(LR,ALPHA,0,ToUpper,SameOrder)" SIMILARITY="Exact"/>
            <Term Item="StudentDateOfBirth" DATAPREP="SCAN(LR,ALPHA,0,ToUpper,SameOrder)" SIMILARITY="Exact"/>
        </Rule>
        <Rule Ident="2">
            <Term Item="StudentLastName" DATAPREP="SCAN(LR,ALPHA,0,ToUpper,SameOrder)" SIMILARITY="Exact"/>
            <Term Item="StudentDateOfBirth" DATAPREP="SCAN(LR,ALPHA,0,ToUpper,SameOrder)" SIMILARITY="Exact"/>
            <Term Item="StudentSchoolCode" DATAPREP="SCAN(LR,ALPHA,0,ToUpper,SameOrder)" SIMILARITY="Exact"/>
        </Rule>
     </IdentityRules>
</OysterAttributes>
