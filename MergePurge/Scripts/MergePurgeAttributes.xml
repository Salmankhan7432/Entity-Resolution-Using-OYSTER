<OysterAttributes System="School">
    <Attribute Item="StudentFirstName" />
    <Attribute Item="StudentLastName"  />
    <Attribute Item="LEA"  Algo="none" />
    <Attribute Item="StudentDateOfBirth" />
        
    <!-- -->
    <IdentityRules>
        <Rule Ident="1">
            <Term Item="StudentFirstName" Similarity="SCAN(LR,ALPHA,0,ToUpper,SameOrder)" />
            <Term Item="StudentLastName" Similarity="SCAN(LR,ALPHA,0,ToUpper,SameOrder)" />
            <Term Item="StudentDateOfBirth" Similarity="SCAN(LR,ALPHA,0,ToUpper,SameOrder)" />
        </Rule>
        <Rule Ident="2">
            <Term Item="StudentLastName" Similarity="SCAN(LR,ALPHA,0,ToUpper,SameOrder)" />
            <Term Item="LEA" Similarity="SCAN(LR,ALPHA,0,ToUpper,SameOrder)" />
            <Term Item="StudentDateOfBirth" Similarity="SCAN(LR,ALPHA,0,ToUpper,SameOrder)" />
        </Rule>
    </IdentityRules>
</OysterAttributes>
